{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["preact", "airbnb-base", "prettier"],
  "plugins": ["jest", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "react/no-did-mount-set-state": 0
  }
}
